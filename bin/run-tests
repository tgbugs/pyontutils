#!/usr/bin/env bash
pushd htmlfn;   pytest --verbose --color=yes --cov-append --cov-config=../.coveragerc --cov=htmlfn test || export DEAD=htmlfn: ; popd
pushd ttlser;   pytest --verbose --color=yes --cov-append --cov-config=../.coveragerc --cov=ttlser test || export DEAD=${DEAD}ttlser: ; popd
                pytest --verbose --color=yes --cov-append                             --cov=pyontutils --cov=ttlser test || export DEAD=${DEAD}pyontutils:
pushd nifstd;   pytest --verbose --color=yes --cov-append --cov-config=../.coveragerc --cov=pyontutils --cov=nifstd_tools test || export DEAD=${DEAD}nifstd: ; popd
pushd neurondm; pytest --verbose --color=yes --cov-append --cov-config=../.coveragerc --cov=pyontutils --cov=neurondm test || export DEAD=${DEAD}neurondm: ; popd
if [[ ! -z "${DEAD}" ]]; then
    (>&2 echo ${DEAD});
    exit 1;
else
    exit 0;
fi
